@model TAApplication.Models.Application

@{
    ViewData["Title"] = "Create";
}
<head>
    <meta charset="utf-8" />

    <meta name="author" content="Cole Hanlon, Tyler Harkness">
    <meta name="description" content="University of Utah School of Computing
          TA Program Create Application Page">
    <meta charset="utf-8">
    <meta name="keywords" content="UofU, University of Utah, School of Computing,
          TA Program, TA Application, CS TA, Apply">

    <title>Create an Application</title>

    <link rel="icon" type="image/x-icon" href="../../wwwroot/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">

    <link href="~/TAApplication.styles.css" rel="stylesheet">

</head>
<h1>Create an Application</h1>
<div id="container">
<div class="row">
        <div class="col-md-6 col-xxl-4 mb-2" id="formHalf">
        
            <form asp-action="Create" class="col-xl-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" col-xl-12 mb-2 mt-2>
                <label asp-for="pursuing" class="control-label"></label>
                <select asp-for="pursuing" 
                    asp-items="@Html.GetEnumSelectList<Pursuing>()"
                    class="form-control"></select>
                <span asp-validation-for="pursuing" class="text-danger"></span>
            </div>
                <div class="form-group col-xl-12 mb-2 mt-2">
                <label asp-for="Dept" class="control-label"></label>
                <input asp-for="Dept" class="form-control" />
                <span asp-validation-for="Dept" class="text-danger"></span>
            </div>
                <div class="form-group col-xl-12 mb-2 mt-2">
                <label asp-for="GPA" class="control-label"></label>
                <input asp-for="GPA" class="form-control" />
                <span asp-validation-for="GPA" class="text-danger"></span>
            </div>
                <div class="form-group col-xl-12 mb-2 mt-2">
                <label asp-for="hours" class="control-label"></label>
                <input asp-for="hours" class="form-control" />
                <span asp-validation-for="hours" class="text-danger"></span>
            </div>
                <div class="form-group form-check col-xl-12 mb-2 mt-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="avaliableBeforeSchoo" /> @Html.DisplayNameFor(model => model.avaliableBeforeSchoo)
                </label>
            </div>
                <div class="form-group col-xl-12 mb-2 mt-2">
                <label asp-for="semestersCompleted" class="control-label"></label>
                <input asp-for="semestersCompleted" class="form-control" />
                <span asp-validation-for="semestersCompleted" class="text-danger"></span>
            </div>
                <div class="form-group col-xl-12 mb-2 mt-2">
                <label asp-for="personalStatement" class="control-label" ></label>
                <textarea asp-for="personalStatement" class="form-control" rows="3"> </textarea>
                <span asp-validation-for="personalStatement" class="text-danger"></span>
            </div>
                <div class="form-group col-xl-12 mb-2 mt-2">
                <label asp-for="transferSchool" class="control-label"></label>
                <input asp-for="transferSchool" class="form-control" />
                <span asp-validation-for="transferSchool" class="text-danger"></span>
            </div>
                <div class="form-group col-xl-12 mb-2 mt-2">
                <label asp-for="linkedInURL" class="control-label"></label>
                <input asp-for="linkedInURL" class="form-control" />
                <span asp-validation-for="linkedInURL" class="text-danger"></span>
            </div>
                <div class="form-group col-xl-12 mb-2 mt-2">
                    <label asp-for="resumeFileName" class="control-label"></label>
                    <input asp-for="resumeFileName" type="file" class="form-control">
                <span asp-validation-for="resumeFileName" class="text-danger"></span>
            </div>
                <div class="form-group col-xl-12 mb-2 mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
        <div class="col-md-6 col-xxl-8 mb-2" id="pictureHalf">
            <img class="main-img" src="~/images/application_create_image.jpg" />
        </div>
</div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using TAApplication.Areas.Data
@using TAApplication.Data
@inject ApplicationDbContext _context
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    double totalGPA = 0;
    foreach (Application a in _context.Applications){
        totalGPA += a.GPA;
    }
    double avgGPA = totalGPA / _context.Applications.Count();
}




<h1>Applications Home</h1>

<p>
    <a asp-action="List">View Applications</a>
</p>

<hX id="applicantStatsTitle" class="statusTitle"><u>Applicant stats</u></hX>

<ul id="statsList" class="styled">
    <li>Total Applicants: @_context.Applications.Count()</li>
    <li>Average GPA: @avgGPA</li>
    <li>Employed TAs: -</li>
</ul>
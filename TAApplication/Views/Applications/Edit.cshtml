@model TAApplication.Models.Application

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pursuing" class="control-label"></label>
                <select asp-for="pursuing"
                        asp-items="@Html.GetEnumSelectList<Pursuing>()"
                        class="form-control"></select>
                <span asp-validation-for="pursuing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dept" class="control-label"></label>
                <input asp-for="Dept" class="form-control" />
                <span asp-validation-for="Dept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPA" class="control-label"></label>
                <input asp-for="GPA" class="form-control" />
                <span asp-validation-for="GPA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hours" class="control-label"></label>
                <input asp-for="hours" class="form-control" />
                <span asp-validation-for="hours" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="avaliableBeforeSchoo" /> @Html.DisplayNameFor(model => model.avaliableBeforeSchoo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="semestersCompleted" class="control-label"></label>
                <input asp-for="semestersCompleted" class="form-control" />
                <span asp-validation-for="semestersCompleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="personalStatement" class="control-label"></label>
                <input asp-for="personalStatement" class="form-control" />
                <span asp-validation-for="personalStatement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="transferSchool" class="control-label"></label>
                <input asp-for="transferSchool" class="form-control" />
                <span asp-validation-for="transferSchool" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="linkedInURL" class="control-label"></label>
                <input asp-for="linkedInURL" class="form-control" />
                <span asp-validation-for="linkedInURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="resumeFileName" class="control-label"></label>
                <input asp-for="resumeFileName" class="form-control" />
                <span asp-validation-for="resumeFileName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

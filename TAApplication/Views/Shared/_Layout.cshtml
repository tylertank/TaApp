@using Microsoft.AspNetCore.Identity
@using TAApplication.Areas.Data
@inject SignInManager<TAUser> SignInManager
@inject UserManager<TAUser> UserManager
@inject RoleManager<IdentityRole> rm
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TAApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TAApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TAApplication</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if(SignInManager.IsSignedIn(User)){
                            TAUser currUser = new TAUser();
                            var users = UserManager.Users.ToArray();
                            foreach (var user in users)
                            {
                                if (user.UserName == User.Identity?.Name)
                                {
                                    currUser = user;
                                }
                            }
                            var userRoll = await UserManager.GetRolesAsync(currUser);
                            if(userRoll.First() == "Applicant"){
                                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ApplicationCreate">Create An Application</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="ApplicationDetails">View Your Application</a></li>
                            }
                            else if (userRoll.First() == "Professor"){
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="ApplicantList">Applicant List</a></li>
                            }
                            else if (userRoll.First() == "Administrator"){
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="ApplicantList">Applicant List</a></li>
                                <li class ="nav-item"><a class="nav-link text-dark" asp-controller="Admin" asp-action="Roles">Roles</a></li>

                            }
                        <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="dropdown04" data-bs-toggle="dropdown" aria-expanded="false">TA Menu</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown04">
                                <li><a class="dropdown-item">Cole Hanlon, Tyler Harkness</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ApplicantList">Applicant List</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ApplicationDetails">Application View u0000000</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ApplicationCreate">Application Create u0000000</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Roles">Roles</a></li>
                            </ul>
                        </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
            @if(User.IsInRole("Professor")){

            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TAApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
